{
    "manifest_version": 2,
    "name": "Argh - Youtube Blocker",
    "version": "0.1",

    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["index.js"],
            "css": ["style.css"]
        }
    ],

    "permissions": [
        "activeTab", "tabs", "tabHide"
    ],

    "web_accessible_resources": [
        "resources/*"
    ],

    "browser_specific_settings": {
	    "gecko": {
		    "id": "argh@jhuwald.com"
	    }
    }
}
